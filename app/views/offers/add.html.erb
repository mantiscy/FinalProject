<div class='container_16 prod_details'>
  <div class='grid_7 prefix_1 prod_header'>
    <p>You offer:</p>
  </div>
  <div class='grid_7 suffix_1 prod_header'>
    <p>Swap For:</p>
  </div>
<%= form_for(@offer, :url => finalize_offer_path(@offer)) do |f| %>
  <div class='grid_6 prefix_1 offer_box'>
    <!-- Display the items of the current user -->
      <% current_user.products.each do |p| %>
        <%= link_to (image_tag p.images[0].product_image.little.url, class: 'little'), product_path(p)%>
        <%= check_box_tag "@offer[product_ids][]", p.id, @offer.products.include?(p) %>
      <% end %>
  </div>

  <div class='grid_6 suffix_1 offer_box'>
    <!-- Get the other user involved in the offer and display his items -->
    <% if @offer.users[0] == current_user %>
      <% user = @offer.users[1] %>
    <% else %>
      <% user = @offer.users[0] %>
    <% end %>
    <% user.products.each do |p| %>  
      <%= link_to (image_tag p.images[0].product_image.little.url, class: 'little'), product_path(p)%>
      <%= check_box_tag "@offer[product_ids][]", p.id, @offer.products.include?(p) %>
    <% end %>

    </div>
  <div class='clear'></div>
      <div class="prefix_6 grid_2">
        <%= f.submit 'Finalize Offer'%>
      </div>
   
  
<% end %>
</div>